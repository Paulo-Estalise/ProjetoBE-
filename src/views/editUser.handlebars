<form action="/api/users/{{user._id}}" method="POST">
  <input type="text" name="name" value="{{user.name}}" required>
  <input type="email" name="email" value="{{user.email}}" required>
  <select name="role" required>
    <option value="admin" {{#ifCond user.role '== "admin"'}}selected{{/ifCond}}>Admin</option>
    <option value="user" {{#ifCond user.role '== "user"'}}selected{{/ifCond}}>User</option>
  </select>
  <button type="submit">Update User</button>
</form>